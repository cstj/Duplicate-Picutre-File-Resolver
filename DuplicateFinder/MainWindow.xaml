<Window x:Class="DuplicateFinder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.ignore.com"
        mc:Ignorable="d ignore"
        Height="543.808"
        Width="676.597"
        Title="{Binding TitleString}"
        DataContext="{Binding Main, Source={StaticResource Locator}}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Skins/MainSkin.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="42"/>
            <RowDefinition Height="138"/>
            <RowDefinition/>
            <RowDefinition Height="22"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="204"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="37"/>
            <ColumnDefinition Width="82"/>
        </Grid.ColumnDefinitions>
        <Border Margin="10" Grid.Column="1" Grid.Row="2"  BorderThickness="1" BorderBrush="Gray" Grid.ColumnSpan="3">
            <Image Source="{Binding ImageSource}" />
        </Border>
        <ListBox Margin="10,29,0,10" Grid.Row="1" Grid.RowSpan="2" ItemsSource="{Binding DupList}" SelectedItem="{Binding DupSelected}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding displayName}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ListBox Grid.Column="1" Margin="10,0,10,28" Grid.Row="1" Grid.ColumnSpan="3" ItemsSource="{Binding DupFilesList}" SelectedItem="{Binding DupFileSelected}"/>
        <Button Content="..." Grid.Column="2" Margin="5,10,10,10" Command="{Binding GetSourceLocationCommand, Mode=OneWay}"/>
        <TextBox Grid.Column="1" Margin="10,10,0,10" TextWrapping="Wrap" IsEnabled="False" Text="{Binding SourceLocation}"/>
        <Label Content="Base Directory:" Margin="10,8,0,10"/>
        <Button Content="(Re)Scan" Grid.Column="3" Margin="0,10,10,10" Command="{Binding ScanCommand, Mode=OneWay}" IsEnabled="{Binding ScanEnabled}"/>
        <ProgressBar Margin="10,0,10,10" Grid.Row="3" Grid.ColumnSpan="4" Maximum="100" Minimum="0" Value="{Binding PgsVal}"/>
        <Label Content="Duplicates" Margin="10,0,0,114" Grid.Row="1" Height="24" VerticalAlignment="Bottom"/>
        <Button Content="Delete Selected" Grid.Column="2" Command="{Binding DeleteSelectedCommand, Mode=OneWay}" Grid.Row="1" HorizontalAlignment="Right" Width="109" Height="22" VerticalAlignment="Bottom" Grid.ColumnSpan="2" Margin="0,0,10,0" IsEnabled="{Binding DeleteFileEnabled}"/>
        <Button Content="Keep Selected" Grid.Column="1" Margin="0,0,10,0" Command="{Binding KeepSelectedCommand, Mode=OneWay}" Grid.Row="1" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="109" IsEnabled="{Binding KeepFileEnabled}"/>

    </Grid>
</Window>
